<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/background_black">


    <TextView
        android:id="@+id/currency_name_and_char_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/space_1"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nominal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="4"
        tools:text="Австралийский доллар(AUD)" />

    <TextView
        android:id="@+id/nominal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/currency_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/currency_name_and_char_code"
        app:layout_constraintHorizontal_weight="1.5"
        tools:text="1000" />



    <TextView
        android:id="@+id/currency_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="2dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/nominal"
        app:layout_constraintBottom_toTopOf="@id/value_previous"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        tools:text="54.5422" />

    <TextView
        android:id="@+id/value_previous"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/currency_value"
        app:layout_constraintStart_toEndOf="@+id/nominal"
        app:layout_constraintVertical_weight="1"
        tools:text="+0.03"/>

</androidx.constraintlayout.widget.ConstraintLayout>